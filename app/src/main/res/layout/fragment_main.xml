<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.MainFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_click_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/read_about_me_in_android_river"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_view_binding"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/img_margin"
        android:src="@drawable/view_binding"
        app:layout_constraintTop_toBottomOf="@id/txt_click_me"

        />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="@dimen/img_margin"
        android:id="@+id/btn_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/btn_margin"
        android:layout_marginEnd="@dimen/btn_margin"
        android:text="@string/reade_more"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        android:background="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/img_view_binding" />
</androidx.constraintlayout.widget.ConstraintLayout>